---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const posts = (await getCollection('releases')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title={SITE_TITLE}>
    <div class="container mx-auto max-w-6xl px-4 py-12 sm:py-16 lg:py-20">
        
        <header class="text-center mb-16 relative z-10">
            <h1 class="text-4xl md:text-6xl font-bold font-orbitron text-neon-cyan tracking-widest uppercase mb-4 animate-pulse">{SITE_TITLE}</h1>
            <p class="text-lg md:text-xl text-gray-300 max-w-3xl mx-auto">{SITE_DESCRIPTION}</p>
        </header>

        <main class="grid gap-8 md:gap-10 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 relative z-10">
            {posts.map(post => (
                <a href={`/releases/${post.slug}/`} class="cyber-card group block overflow-hidden">
                    <img 
                        src={post.data.heroImage} 
                        alt={`Hero image for ${post.data.title}`} 
                        class="w-full h-48 object-cover group-hover:opacity-75 transition-opacity duration-300"
                        onerror="this.style.display='none'"
                    />
                    <div class="p-6">
                        <p class="text-sm text-gray-400 mb-2">
                             {new Date(post.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                        </p>
                        <h2 class="text-xl font-bold font-orbitron text-white mb-3 group-hover:text-neon-cyan transition-colors duration-300">
                            {post.data.title}
                        </h2>
                        <p class="text-gray-300 leading-relaxed line-clamp-3">
                            {post.data.description}
                        </p>
                    </div>
                </a>
            ))}
            {posts.length === 0 && (
                <div class="md:col-span-2 lg:col-span-3 text-center py-16 command-box rounded-lg">
                    <p class="text-lg">> System.log: No release entries found.</p>
                    <p class="text-lg">> Action: Use admin panel to deploy new entries.</p>
                </div>
            )}
        </main>
        
    </div>
</Layout>

