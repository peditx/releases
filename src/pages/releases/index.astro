---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('releases')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="PeDitXOS - Releases">
	<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20">
		<div class="text-center mb-16">
			<h1 class="text-5xl md:text-6xl font-black font-orbitron text-neon-cyan" data-text="RELEASES">
				RELEASES
			</h1>
			<p class="mt-4 text-lg text-gray-300">
				The latest updates and versions from PeDitXOS.
			</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{posts.map(post => (
				<a href={`/releases/${post.slug}/`} class="block group">
					<div class="cyber-card h-full flex flex-col overflow-hidden">
                        <Image 
                            src={post.data.heroImage} 
                            alt={`Cover image for ${post.data.title}`} 
                            width={600}
                            height={350}
                            class="w-full h-48 object-cover group-hover:opacity-80 transition-opacity"
                        />
						<div class="p-6 flex-grow flex flex-col">
							<h2 class="text-2xl font-bold font-orbitron text-neon-magenta mb-2 group-hover:text-neon-cyan transition-colors">
								{post.data.title}
							</h2>
							<p class="text-gray-400 mb-4 text-sm">
								Published on: {new Date(post.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
							</p>
							<p class="text-gray-300 flex-grow">
								{post.data.description}
							</p>
						</div>
					</div>
				</a>
			))}
		</div>
	</div>
</Layout>

